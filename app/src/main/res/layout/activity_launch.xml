<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_height="match_parent">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profesional GIF Maker"
            android:textSize="24dp"
            android:textStyle="bold"
            android:layout_marginTop="50dp"
            android:textColor="@color/black_212222"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create your own funny Gifs like a Pro"
            android:textSize="16dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black_212222"/>

<LinearLayout
    android:layout_width="200dp"
    android:gravity="center_vertical"
    android:layout_marginTop="10dp"
    android:layout_height="30dp">
    <ImageView
        android:layout_width="20dp"
        android:src="@mipmap/choose"
        android:scaleType="fitXY"
        android:layout_height="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:text="Unlimited GIF maker"
        android:textSize="13dp"
        android:layout_marginStart="13dp"
        android:textColor="#333333"
        android:layout_height="wrap_content"/>
</LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_height="30dp">
            <ImageView
                android:layout_width="20dp"
                android:src="@mipmap/choose"
                android:scaleType="fitXY"
                android:layout_height="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="Advanced GIF editor"
                android:textSize="13dp"
                android:layout_marginStart="13dp"
                android:textColor="#333333"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="200dp"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_height="30dp">
            <ImageView
                android:layout_width="20dp"
                android:src="@mipmap/choose"
                android:scaleType="fitXY"
                android:layout_height="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="Remove ads"
                android:textSize="13dp"
                android:layout_marginStart="13dp"
                android:textColor="#333333"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_try"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:background="@drawable/base_shape"
            android:gravity="center"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:text="$199.99/Year" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subscription info:"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textColor="@color/black_212222"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:gravity="center"
            android:text="@string/subscripitions_info"
            android:textSize="16dp"
            android:textColor="@color/black_212222"/>

    </LinearLayout>

    <data />
</layout>