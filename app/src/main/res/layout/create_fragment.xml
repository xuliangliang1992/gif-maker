<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingEnd="15dp"
        android:paddingStart="15dp">

         <TextView
            android:id="@+id/tv_ptg"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:background="@mipmap/photo_bg"
            android:padding="10dp"
            android:text="Photo to Gif"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold"
             android:paddingTop="20dp"
             android:paddingStart="30dp"
            app:layout_constraintEnd_toStartOf="@+id/tv_vtg"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title" />

        <TextView
            android:id="@+id/tv_ctg"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:background="@mipmap/camera_bg"
            android:padding="10dp"
            android:text="Camera to Gif"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:paddingStart="24dp"
            android:paddingTop="20dp"
            android:textStyle="bold"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            app:layout_constraintEnd_toEndOf="@id/tv_vtg"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="@id/tv_ptg"
            app:layout_constraintTop_toBottomOf="@id/tv_ptg" />

        <TextView
            android:id="@+id/tv_vtg"
            android:layout_width="0dp"
            android:paddingTop="20dp"
            android:paddingStart="30dp"
            android:layout_height="0dp"
            android:background="@mipmap/video_bg"
            android:text="Video to Gif"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/tv_ptg"
            app:layout_constraintTop_toTopOf="@id/tv_ptg"
            app:layout_constraintBottom_toBottomOf="@id/tv_ptg"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp"
            android:text="GIF MAKER"
            android:textColor="#3782F5"
            android:textSize="27dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="25dp"
            android:text="You can generate gif from pictures or videos"
            android:textColor="#999999"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_ctg" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <data />
</layout>
